<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- LOGIN STYLES -->

    <style name="AppTheme.Login.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Login.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Login.Button.Login" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/AppTheme.Login.Button.Login.TextAppearance</item>
        <item name="android:backgroundTint">@color/login_button_background_color</item>
        <item name="android:paddingLeft">@dimen/login_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/login_button_padding_horizontal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Login.Button.SignUp" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/AppTheme.Login.Button.Login.TextAppearance</item>
        <item name="android:backgroundTint">@color/login_button_background_color</item>
        <item name="android:paddingLeft">@dimen/sign_up_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/sign_up_button_padding_horizontal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Login.Button.Login.TextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/login_button_text_size</item>
    </style>

</resources>
